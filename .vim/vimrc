" colour options
set bg=dark
set termguicolors
"let g:hybrid_custom_term_colors = 1
colo hybrid

syntax on
filetype plugin indent on

" indent settings
set smartindent
set tabstop=8
set shiftwidth=8

" misc settings
set number
set cursorline
set timeoutlen=150
set ttimeoutlen=150
set noshowmode
set completeopt=menuone
set pastetoggle=<F2>
set splitbelow
set splitright
set fillchars+=vert:â”‚
set textwidth=110
set colorcolumn=80,110

let mapleader=','
let maplocalleader='\\'

highlight Comment cterm=italic gui=italic
highlight WildMenu guifg=#1d1f21 guibg=#f0c674

" vim-airline options
let g:airline_symbols_ascii = 1
if !exists('g:airline_symbols')
	let g:airline_symbols = {}
endif
let g:airline_left_sep = ''
let g:airline_right_sep = ''
let g:airline_left_alt_sep = ''
let g:airline_right_alt_sep = ''
let g:airline_symbols.maxlinenr = ''
let g:airline_symbols.linenr = ''
let g:airline_symbols.whitespace = ''

let g:airline_theme = 'hybridline'
let g:airline_theme_patch_func = 'AirlineThemePatch'

" patch hybridline
function! AirlineThemePatch(palette)
	if g:airline_theme == 'hybridline'
		let g:airline#themes#hybridline#palette.insert = copy(g:airline#themes#hybridline#palette.normal)
		let g:airline#themes#hybridline#palette.insert.airline_a = ['#000000', '#8abeb7', 23, 14]
		let g:airline#themes#hybridline#palette.insert_paste.airline_a = ['#000000', '#cc6666', 16, 1]
		let g:airline#themes#hybridline#palette.normal.airline_a = ['#000000', '#b5bd68', 22, 10]
	endif
endfunction

let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#show_buffers = 0
let g:airline#extensions#hunks#non_zero_only = 1
let g:airline#extensions#whitespace#mixed_indent_algo = 2

" tmuxline options
let g:tmuxline_preset = 'full'
let g:tmuxline_powerline_separators = 0

" ale options
let g:ale_sign_error = '=>'
let g:ale_sign_warning = '->'

let g:ale_linters = {
			\ 'c': ['clang-check', 'cppcheck'],
			\ 'cpp': ['clang-check', 'cppcheck'],
			\ }

let g:tex_flavor = 'latex'

let g:gutentags_project_root = ['CMakeLists.txt']

autocmd FileType tex,markdown setl spell
autocmd FileType python setl ts=4 sw=4

" include per-directory settings
source $HOME/.vim/dirs.vimrc
