let g:ale_sign_error = 'X'
let g:ale_sign_warning = '!'

let g:SuperTabDefaultCompletionType = '<c-n>'

let mapleader=','
au BufNewFile,BufRead ~/source/libinput/*.[ch] setl ts=8 sw=8 cc=80
au FileType qf setl nonu cc=
au FileType location setl cc=

